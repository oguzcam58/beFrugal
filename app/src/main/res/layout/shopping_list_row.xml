<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <CheckBox
        android:layout_gravity="top|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_select"
        android:focusable="false"/>

    <TextView
        android:layout_gravity="top|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/check_box_padding_top"
        android:layout_toEndOf="@id/list_select"
        android:id="@+id/shopping_list_title"
        android:text="Hello World"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_total_amount"
        android:layout_below="@id/shopping_list_title"
        android:layout_alignParentEnd="true"
        android:text="@string/add"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_total_amount_label"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_below="@id/shopping_list_title"
        android:layout_toStartOf="@id/list_total_amount"
        android:text="@string/total_amount"
        android:textColor="@android:color/darker_gray"/>

</RelativeLayout>