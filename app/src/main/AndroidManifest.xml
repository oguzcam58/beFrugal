<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oguzcam.befrugal">

    <permission
        android:name="com.example.oguzcam.befrugal.LICENCE_TO_KILL"
        android:label="Licenced to kill"
        android:protectionLevel="dangerous" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListItemActivity"
            android:label="@string/title_activity_list_items"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oguzcam.befrugal.MainActivity" />
        </activity>

        <provider
            android:name=".model.ListProvider"
            android:authorities="com.example.oguzcam.befrugal.app"
            android:enabled="true"
            android:exported="true"
            android:permission="com.example.oguzcam.befrugal.LICENCE_TO_KILL" />

        <activity
            android:name=".ListItemDetailActivity"
            android:label="@string/title_activity_list_item_detail"
            android:parentActivityName=".ListItemActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oguzcam.befrugal.ListItemActivity" />
        </activity>
    </application>

</manifest>
